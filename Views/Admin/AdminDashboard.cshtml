@model DP_Portal.Models.AdminDashboard


@{
    ViewBag.Title = "Index";
}
<style>

    /* Hide for mobile, show later */
    .sidebar {
        display: none;
    }

    @@media (min-width: 768px) {
        .sidebar {
            position: fixed;
            top: 0px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: block;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
            background-color: #f5f5f5;
            border-right: 1px solid #eee;
        }
    }
    /* Sidebar navigation */
    .nav-sidebar {
        margin-right: -21px; /* 20px padding + 1px border */
        margin-bottom: 20px;
        margin-left: -20px;
    }

        .nav-sidebar > li > a {
            padding-right: 20px;
            padding-left: 20px;
        }

        .nav-sidebar > .active > a,
        .nav-sidebar > .active > a:hover,
        .nav-sidebar > .active > a:focus {
            color: #fff;
            background-color: #428bca;
        }

    .main {
        padding: 20px;
    }

    @@media (min-width: 768px) {
        .main {
            padding-right: 20px;
            padding-left: 20px;
        }
    }

    .main .page-header {
        margin-top: 0;
    }

    .placeholders {
        margin-bottom: 20px;
        text-align: center;
        margin-left:20%;
    }

        .placeholders h4 {
            margin-bottom: 0;
        }

    .placeholder {
        margin-bottom: 20px;
    }

        .placeholder img {
            display: inline-block;
            border-radius: 50%;
        }

    .numberCircle {
        width: 120px;
        line-height: 120px;
        border-radius: 50%;
        text-align: center;
        font-size: 32px;
        border: 2px solid #666;
        background-color:aliceblue;
    }
</style>

@*@Session["user"]*@


<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading" style="text-align:center"> <h2 >Admin Dashboard</h2></div>
    <div class="panel-body">
        <div class="container-fluid">

            <div class="col-sm-12 col-md-12  main">
              
                <div class="row placeholders">
                    <div class="col-xs-6  col-md-2 col-sm-3  ">
                        <a href="/Admin/AdminDashboard?code=" class="btn btn-secondary">
                            <div class="numberCircle">
                                @* @Html.ActionLink(Model.doctor_count, "AdminDashboard", "Admin", new { code = "Doctor_Active" })*@
                                @Model.total_count
                            </div>
                        </a>

                        <h4>Total # </h4>
                    </div>
                    <div class="col-xs-6  col-md-2 col-sm-3  ">
                        <a href="/Admin/AdminDashboard?code=DOCTOR" class="btn btn-secondary">
                            <div class="numberCircle">
                                @* @Html.ActionLink(Model.doctor_count, "AdminDashboard", "Admin", new { code = "Doctor_Active" })*@
                                @Model.doctor_count

                            </div>
                        </a>
                        <h4>Doctor # </h4>
                    </div>
                    <div class="col-xs-6 col-md-2 col-sm-3  ">
                        <a href="/Admin/AdminDashboard?code=PATIENT" class="btn btn-secondary">
                            <div class="numberCircle">
                                @Model.patient_count
                            </div>
                        </a>


                        <h4>Patient # </h4>
                    </div>
                    <div class="col-xs-6 col-md-2 col-sm-3  ">
                        <a href="/Admin/AdminDashboard?code=ADMIN" class="btn btn-secondary">
                            <div class="numberCircle">
                                @Model.admin_count
                            </div>
                        </a>


                        <h4>Admin # </h4>
                    </div>


                </div>
            </div>
            <hr />
            <table class="table">
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Email Id
                    </th>

                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Mobile Number
                    </th>
                    <th>
                        IsActive
                    </th>
                    <th>
                        User Type
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.users_details)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.USER_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMAIL_ID)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.FIRST_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LAST_NAME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MOBILE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ISACTIVE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.USERS_TYPE.USER_TYPE_NAME)
                        </td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.USER_ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.USER_ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.USER_ID })
                        </td>*@
                    </tr>
                }

            </table>

        </div>

    </div>
</div>